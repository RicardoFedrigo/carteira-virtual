{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./build",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
